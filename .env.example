# Storage
STORAGE_BACKEND=local
LOCAL_DATA_PATH=./data

# AWS S3 (optional - if STORAGE_BACKEND=s3)
# S3_BUCKET_NAME=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=sales_trainer_docs

# LLM Provider (openai or gemini)
LLM_PROVIDER=openai
OPENAI_API_KEY=
GOOGLE_API_KEY=

# RAG Mode (true = load all docs, false = vector search)
USE_FULL_CONTEXT=false

# Voice Provider (openai or elevenlabs)
VOICE_PROVIDER=openai
ELEVENLABS_API_KEY=

# Server
HOST=0.0.0.0
PORT=8000
